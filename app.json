{
  "name": "AI Life Coach",
  "description": "An intelligent life coaching application powered by OpenAI GPT-4o",
  "repository": "https://github.com/ervinradosavlevici/ai-life-coach",
  "logo": "https://cdn.jsdelivr.net/gh/ervinradosavlevici/ai-life-coach/static/logo.png",
  "keywords": ["flask", "python", "ai", "life-coach", "openai", "gpt", "personal-development"],
  "image": "heroku/python",
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "addons": [],
  "env": {
    "OPENAI_API_KEY": {
      "description": "Your OpenAI API key for GPT-4o access",
      "required": true
    },
    "SESSION_SECRET": {
      "description": "Secret key for session management",
      "generator": "secret"
    },
    "FLASK_ENV": {
      "description": "Flask environment",
      "value": "production"
    }
  },
  "scripts": {
    "postdeploy": "echo 'AI Life Coach deployed successfully!'"
  }
}